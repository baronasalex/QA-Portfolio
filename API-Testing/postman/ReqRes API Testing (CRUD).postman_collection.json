    {
      "name": "POST Create User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {\r",
              "  pm.response.to.have.status(201);\r",
              "});\r",
              "\r",
              "pm.test(\"Response has created user fields\", function () {\r",
              "  const json = pm.response.json();\r",
              "  pm.expect(json).to.have.property(\"name\", \"Alex Baronas\");\r",
              "  pm.expect(json).to.have.property(\"job\", \"QA Trainee\");\r",
              "  pm.expect(json).to.have.property(\"id\");\r",
              "  pm.expect(json).to.have.property(\"createdAt\");\r",
              "});\r",
              "\r",
              "\r",
              "pm.test(\"Save created user id to collection variable\", function () {\r",
              "  const json = pm.response.json();\r",
              "  pm.collectionVariables.set(\"createdUserId\", json.id);\r",
              "});\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
